#!/bin/sh

APP=SAMPLE

# CREATE THE FOLDER
mkdir /opt/$APP
cd /opt/$APP

# ADD THE REMOVER
echo '#!/bin/sh' >> /opt/$APP/remove
echo "rm -R -f /usr/share/applications/$APP.desktop /opt/$APP /usr/local/bin/$APP" >> /opt/$APP/remove
chmod a+x /opt/$APP/remove

# DOWNLOAD THE APPIMAGE
mkdir tmp
cd ./tmp

WGET-THE-PROGRAM-OR-THE-APPIMAGE

cd ..
mv ./tmp/*mage ./$APP
chmod a+x /opt/$APP/$APP
rmdir ./tmp

# LINK
ln -s /opt/$APP/$APP /usr/local/bin/$APP

# SCRIPT TO UPDATE THE PROGRAM
# THIS IS JUST AN EXAMPLE ON HOW TO COMPARE THE VERSION WITH THE ONE WROTE ON THE MAIN PAGE OF THE WEBSITE
# THIS IS FOR THE APPIMAGE VERSION OF KDENLIVE VIDEO EDITOR, FOR YOUR APPLICATION MAY BE DIFFERENT
echo '#!/bin/sh
version=$(exec /opt/kdenlive/kdenlive --version | grep -Eo "[+-]?[0-9]+([.][0-9]+)?+[+-]?[0-9]+([.][0-9]+)?")
if curl -L -s https://kdenlive.org/en/download/ | grep -ioF "AppImage $version"; then
  echo "Update not needed, exit!"
else
  mkdir /opt/kdenlive/tmp
  cd /opt/kdenlive/tmp' >> /opt/$APP/AM-updater

echo '  wget https://download.kde.org/$(wget https://kdenlive.org/en/download/ -O - | grep "/stable/kdenlive/.*/linux/.*appimage" -o)' >> /usr/local/bin/$APP

echo '  cd ..
  mv ./tmp/*mage ./kdenlive
  chmod a+x /opt/kdenlive/kdenlive
  rmdir ./tmp
fi' >> /opt/$APP/AM-updater
chmod a+x /opt/$APP/AM-updater

# LAUNCHER
rm /usr/share/applications/$APP.desktop
echo "LAUNCHER" >> /usr/share/applications/$APP.desktop

# ICON
WGET-THE-ICON

# CHANGE THE PERMISSIONS
currentuser=$(who | awk '{print $1}')
chown -R $currentuser /opt/$APP

# MESSAGE
echo "
	
"
