#!/bin/sh

APP=libreoffice

# CREATE THE FOLDER
mkdir /opt/$APP
cd /opt/$APP

# ADD THE REMOVER
echo '#!/bin/sh' >> /opt/$APP/remove
echo "rm -R -f /usr/share/applications/AM-$APP* /opt/$APP /usr/local/bin/$APP" >> /opt/$APP/remove
chmod a+x /opt/$APP/remove

# CHOOSE A VERSION

read -r -p "

 This script will help you choose a version of Libreoffice using 'AM'.
 
 Libreoffice versions are classified according to functionality (STILL and
 FRESH) and the number of languages included (STANDARD and FULL):
 
 - STILL is the Stable version. This version is slightly older and does not 
   have the latest features, but it has been tested for longer.
 - FRESH is the Testing version. If you're a technology enthusiast, early 
   adopter or power user, this version is for you!
 - STANDARD supports English (US and GB), Arabic, Chinese (Simplified and 
   Traditional), French, German, Italian, Japanese, Korean, Portuguese 
   (Brazilian and Portugal), Russian, and Spanish.
 - FULL includes all the languages supported by LibreOffice.
 - HELP, this flag is a version including manuals.
    
 1) STILL-STANDARD
 2) STILL-STANDARD-HELP
 3) STILL-FULL
 4) STILL-FULL-HELP
 5) FRESH-STANDARD
 6) FRESH-STANDARD-HELP
 7) FRESH-FULL
 8) FRESH-FULL-HELP
 
 Which version you choose? " response
case "$response" in
	1) wget https://appimage.sys42.eu/LibreOffice-still.standard-x86_64.AppImage -O $APP
	   wget https://appimage.sys42.eu/LibreOffice-still.standard-x86_64.AppImage.zsync -O $APP.zsync
	   echo "https://appimage.sys42.eu/LibreOffice-still.standard-x86_64.AppImage" >> version;;
	2) wget https://appimage.sys42.eu/LibreOffice-still.standard.help-x86_64.AppImage -O $APP
	   wget https://appimage.sys42.eu/LibreOffice-still.standard.help-x86_64.AppImage.zsync -O $APP.zsync
	   echo "https://appimage.sys42.eu/LibreOffice-still.standard.help-x86_64.AppImage" >> version;;	
	3) wget https://appimage.sys42.eu/LibreOffice-still.full-x86_64.AppImage -O $APP
	   wget https://appimage.sys42.eu/LibreOffice-still.full-x86_64.AppImage.zsync -O $APP.zsync
	   echo "https://appimage.sys42.eu/LibreOffice-still.full-x86_64.AppImage" >> version;;
	4) wget https://appimage.sys42.eu/LibreOffice-still.full.help-x86_64.AppImage -O $APP
	   wget https://appimage.sys42.eu/LibreOffice-still.full.help-x86_64.AppImage.zsync -O $APP.zsync
	   echo "https://appimage.sys42.eu/LibreOffice-still.full.help-x86_64.AppImage" >> version;;	   
	5) wget https://appimage.sys42.eu/LibreOffice-fresh.standard-x86_64.AppImage -O $APP
	   wget https://appimage.sys42.eu/LibreOffice-fresh.standard-x86_64.AppImage.zsync -O $APP.zsync
	   echo "https://appimage.sys42.eu/LibreOffice-fresh.standard-x86_64.AppImage" >> version;;
	6) wget https://appimage.sys42.eu/LibreOffice-fresh.standard.help-x86_64.AppImage -O $APP
	   wget https://appimage.sys42.eu/LibreOffice-fresh.standard.help-x86_64.AppImage.zsync -O $APP.zsync
	   echo "https://appimage.sys42.eu/LibreOffice-fresh.standard.help-x86_64.AppImage" >> version;;	   
	7) wget https://appimage.sys42.eu/LibreOffice-fresh.full-x86_64.AppImage -O $APP
	   wget https://appimage.sys42.eu/LibreOffice-fresh.full-x86_64.AppImage.zsync -O $APP.zsync
	   echo "https://appimage.sys42.eu/LibreOffice-fresh.full-x86_64.AppImage" >> version;;	   
	8) wget https://appimage.sys42.eu/LibreOffice-fresh.full.help-x86_64.AppImage -O $APP
	   wget https://appimage.sys42.eu/LibreOffice-fresh.full.help-x86_64.AppImage.zsync -O $APP.zsync
	   echo "https://appimage.sys42.eu/LibreOffice-fresh.full.help-x86_64.AppImage" >> version;;
	*) sudo /opt/$APP/remove && echo " Installation aborted!"; exit;;	   
esac	   
chmod a+x /opt/$APP/$APP

# LINK
ln -s /opt/$APP/$APP /usr/local/bin/$APP

# SCRIPT TO UPDATE THE PROGRAM
cat >> /opt/$APP/AM-updater << 'EOF'
#!/bin/sh
APP=libreoffice
cd /opt/$APP
mkdir tmp
cd ./tmp
wget $(cat /opt/$APP/version).zsync;
cd ..
mv ./tmp/*mage.zsync ./$APP.zsync
rmdir ./tmp
zsync /opt/$APP/$APP.zsync
rm -R -f /opt/$APP/*zs-old /opt/$APP/*.part
chmod a+x /opt/$APP/$APP
EOF
chmod a+x /opt/$APP/AM-updater

# ICONS
cd /opt/$APP
mkdir icons
mv $(./libreoffice --appimage-extract usr/share/icons/hicolor/scalable/apps/*.svg) ./icons/
RELEASE=$(ls ./icons | head -1 | rev | cut -c 10- | rev)
mv ./icons/$RELEASE-base* ./icons/$APP-base
mv ./icons/$RELEASE-basic* ./icons/$APP-basic
mv ./icons/$RELEASE-calc* ./icons/$APP-calc
mv ./icons/$RELEASE-chart* ./icons/$APP-chart
mv ./icons/$RELEASE-draw* ./icons/$APP-draw
mv ./icons/$RELEASE-extension* ./icons/$APP-extension
mv ./icons/$RELEASE-impress* ./icons/$APP-impress
mv ./icons/$RELEASE-main* ./icons/$APP-main
mv ./icons/$RELEASE-math* ./icons/$APP-math
mv ./icons/$RELEASE-startcenter* ./icons/$APP-startcenter
mv ./icons/$RELEASE-writer* ./icons/$APP-writer

# LAUNCHERS
mv $(./libreoffice --appimage-extract opt/libreoffice*/share/xdg) .
cd xdg
for f in * ; do mv $f AM-$APP-$f; done
sed -i "s# $(echo $RELEASE | cut -c 12-) # #g" *
sed -i "s#Icon=$APP#Icon=/opt/$APP/icons/$APP#g" *
sed -i "s#$RELEASE#$APP#g" *
cd ..
mv ./xdg/* /usr/share/applications/

rm -R -f /opt/$APP/squashfs-root
rm -R -f /opt/$APP/xdg 

# CHANGE THE PERMISSIONS
currentuser=$(who | awk '{print $1}')
chown -R $currentuser /opt/$APP

# MESSAGE
echo "

 LibreOffice is provided by https://www.libreoffice.org
	
"
