#!/bin/sh

APP=wine-6.0.1

# CREATE THE FOLDER
mkdir /opt/$APP
cd /opt/$APP

# ADD THE REMOVER
echo '#!/bin/sh' >> /opt/$APP/remove
echo "rm -R -f /opt/$APP /usr/local/bin/$APP" >> /opt/$APP/remove
chmod a+x /opt/$APP/remove

# DOWNLOAD THE PROGRAM
wget https://github.com/pawitp/wine-appimage/releases/download/wine-6.0.1/wine
chmod a+x /opt/$APP/wine
echo "appimage" >> /opt/$APP/version

# LINK
ln -s /opt/$APP/wine /usr/local/bin/$APP




