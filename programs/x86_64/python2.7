#!/bin/sh

APP=python2.7

mkdir /opt/$APP
cd /opt/$APP

echo '#!/bin/sh' >> /opt/$APP/remove
echo "rm -R -f /opt/$APP /usr/local/bin/$APP" >> /opt/$APP/remove
chmod a+x /opt/$APP/remove

mkdir tmp;
cd ./tmp;
wget -r -A m-manylinux1_x86_64.AppImage -nd https://github.com/niess/python-appimage/releases/tag/python2.7;
cd ..;
mv ./tmp/*mage ./$APP;
chmod a+x /opt/$APP/$APP;

ln -s /opt/$APP/$APP /usr/local/bin/$APP

currentuser=$(who | awk '{print $1}')
chown -R $currentuser /opt/$APP
# MESSAGE
echo "";
echo "        Python AppImage is provided by";
echo "";
echo "    https://github.com/niess/python-appimage ";
echo "";
