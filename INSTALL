#!/bin/sh

mkdir /opt/want /opt/want/install /opt/want/remove
cd /opt/want
wget https://raw.githubusercontent.com/ivan-hc/want/main/opt/want/want
chmod a+x /opt/want/want
ln -s /opt/want/want /usr/bin/want
echo "#!/bin/sh
rm -R /usr/bin/want /opt/want" >> /opt/want/remove/want
chmod a+x /opt/want/remove/want
