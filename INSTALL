#!/bin/sh

mkdir /opt/app /opt/app/programs
cd /opt/app
wget https://raw.githubusercontent.com/ivan-hc/APP-Manager/main/app
chmod a+x /opt/app/app
ln -s /opt/app/app /usr/bin/app
rm /opt/app/remove-app
echo "#!/bin/sh
rm -R /usr/bin/app /opt/app/app" >> /opt/app/remove-app
chmod a+x /opt/app/remove-app
currentuser=$(who | awk '{print $1}')
chown -R $currentuser /opt/app
