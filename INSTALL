#!/bin/sh

mkdir /opt/want /opt/eya/programs /opt/eya/remove
cd /opt/want
wget https://raw.githubusercontent.com/ivan-hc/EYA-App-Manager/main/eya
chmod a+x /opt/eya/eya
ln -s /opt/want/want /usr/bin/want
echo "#!/bin/sh
rm -R /usr/bin/eya /opt/eya/eya" >> /opt/eya/remove/eya
chmod a+x /opt/eya/remove/eya
currentuser=$(who | awk '{print $1}')
chown -R $currentuser /opt/eya
